#!/bin/sh
## Current iteration: electr0n <i@hunt.revrse.sh>
## Previous author: pyratebeard <root@pyratebeard.net>
## Original author: xero <x@xero.nu>
#\\ vars
#FULL=▓
#EMPTY=░
#FULL=━
#EMPTY=┄

#EMPTY=━
EMPTY=─
FULL=┅

name=$USER
host=$(hostname)
uptime=$(uptime -p | cut -b4- | tr -d ',|eeks|ay|our|inute')
battery=/sys/class/power_supply/BAT1
distro=$(grep -E "^ID=" /etc/os-release | awk -F= '{print $2}')
pkgs=$(pacman -Qqs | wc -l)
#upgrade=$(sudo pacman -Sy >/dev/null ; pacman -Qu | wc -l)
kernel=$(uname -r)
shell=$(echo $SHELL | awk -F/ '{print $NF}')
#term=$TERM
terminal=$TERM_PROGRAM
#colors=$(grep urxvt-colors ~/.Xresources | awk -F\/ '{print $NF}' | tr -d '"')
colors=OneDark
font=$(grep -Ei "^\*.font" ~/.Xresources | awk -F: '{print $2}')
font_size=$(grep -Ei "\*.font" ~/.Xresources | awk -F: '{print $5}') #grep -Eo '[0-9]{1,2}')
#wm=$XDG_SESSION_DESKTOP
wm=$DE

#\\ progress bar
draw()
{
  perc=$1
  size=$2
  inc=$(( perc * size / 100 ))
  out=
  if [ -z $3 ]
  then
    color="36"
  else
    color="$3"
  fi 
  for v in `seq 0 $(( size - 1 ))`; do
    test "$v" -le "$inc"   \
    && out="${out}\e[0;34m${FULL}" \
    || out="${out}\e[38;5;236m${EMPTY}"
  done
  printf $out
}


#\\ greets
printf "  ┓━┓┓ ┳┓━┓o┏┓┓┳━┓┏━┓\n"
printf "  ┗━┓┗┏┛┗━┓┃┃┃┃┣━ ┃ ┃\n"
printf "╓──━┛ ┇ ━━┛┇┇┗┛┇  ┛━┛\n"
printf "╙──────────────────────────────────── ─ ─┐\n"

printf " \e[1;33m    user \e[0;34m┄┬┄ \e[0;33m$name\e[0m\t\t\t │\n"
printf " \e[1;33m    host \e[0;34m┄┼┄ \e[1;35m$host\e[0m\t\t\t o\n"
printf " \e[1;33m      up \e[0;34m┄┴┄ \e[1;37m$uptime\n"
printf " \e[0m\n"

#\\ environment
printf " \e[1;33m  distro \e[0;34m┄┬┄ \e[0m$distro\n"
printf " \e[1;33m  kernel \e[0;34m┄┼┄ \e[0m$kernel\n"
printf " \e[1;33mpackages \e[0;34m┄┼┄ \e[0m$pkgs\n"
#printf " \e[1;35m upgrade \e[38;5;236m▓▒ \e[0m$upgrade\n"
printf " \e[1;33m      wm \e[0;34m┄┼┄ \e[0m$wm\n"
printf " \e[1;33m   shell \e[0;34m┄┼┄ \e[0m$shell\n"
printf " \e[1;33m    term \e[0;34m┄┼┄ \e[0m$terminal\n"
printf " \e[1;33m    font \e[0;34m┄┼┄\e[0m$font $font_size\n"
printf " \e[1;33m  colors \e[0;34m┄┴┄ \e[0m$colors\n"
printf " \e[0m\n"

~/bin/blocks

#\\ cpu
cpu=$(grep 'cpu ' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {print usage}')
c_lvl=`printf "%.0f" $cpu`
printf " \e[1;35m%-4s \e[1;37m%-5s %-25s \n" " cpu" "$c_lvl%" " "`draw $c_lvl 15` 

#\\ ram
ram=`free | awk '/Mem:/ {print int($3/$2 * 100.0)}'`
printf " \e[1;35m%-4s \e[1;37m%-5s %-25s \n" " ram" "$ram%" " "`draw $ram 15` 

#\\ battery
if [ -f $battery/charge_full ] ; then
  b_full=$battery/charge_full
  b_now=$battery/charge_now
  bf=`cat $b_full`
  bn=`cat $b_now`
  charge=`printf $(( 100 * $bn / $bf ))`

  case 1 in
    $(($charge <= 15)))
      color='31'
      ;;
    *)
      color='34'
      ;;
  esac
  printf "  \e[0;${color}m%-4s \e[1;${color}m%-5s %-25s \n" " bat" "$charge%" `draw $charge 15 $color`
fi

#\\ volume
vol=`amixer get Master | awk '$0~/%/{print $5}' | head -n1 | tr -d '[]%'`
if amixer get Master | grep -q '\[off\]' 
then
  color='31'
else
  color='34'
fi
printf " \e[1;35m%-4s \e[1;37m%-5s %-25s \n" " vol" "$vol%" " "`draw $vol 15 $color` 

#\\ temperature
#temp=`sensors | awk '/Core\ 0/ {gsub(/\+/,"",$3); gsub(/\..+/,"",$3)    ; print $3}'`
#case 1 in
#  $(($temp <= 50)))
#    color='34'
#    ;;
#  $(($temp >= 75)))
#    color='31'
#    ;;
#  *)
#    color='36'
#    ;;
#esac
#printf "   \e[0;${color}m%-4s \e[1;${color}m%-5s %-25s \n\n" "temp" "$temp°c " `draw $temp 15 $color`
printf " \e[0m\n"
